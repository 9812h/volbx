cmake_minimum_required(VERSION 3.8)

include(ExternalProject)

project(quazip NONE)

ExternalProject_Add(quazip
    PREFIX quazip
    GIT_REPOSITORY https://github.com/stachenov/quazip.git
    GIT_TAG master
    CMAKE_ARGS -DZLIB_INCLUDE_DIR:PATH=${CMAKE_BINARY_DIR}/zlib/install/include -DZLIB_LIBRARY:FILEPATH=${CMAKE_BINARY_DIR}/zlib/install/bin/libzlib.dll -DCMAKE_INSTALL_PREFIX=${CMAKE_BINARY_DIR}/quazip/install
)
